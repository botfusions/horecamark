# HorecaMark Automation Configuration
# Copy this file to .env and configure your values

# ===========================================
# Database Configuration
# ===========================================
DB_NAME=horecemark
DB_USER=horeca
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_PORT=5432

# ===========================================
# Email Notifications (SMTP)
# ===========================================
# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Email credentials
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email addresses
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com,another@example.com

# ===========================================
# Scheduler Configuration
# ===========================================
# Enable built-in scheduler daemon (true/false)
SCHEDULER_ENABLED=false

# Time to run daily scraping (HH:MM format, 24-hour)
SCRAPE_TIME=08:00

# ===========================================
# Logging Configuration
# ===========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================================
# Alert Configuration (for monitoring scripts)
# ===========================================
# Email for error alerts
ALERT_EMAIL=recipient@example.com

# Error threshold before sending alert
ERROR_THRESHOLD=5

# ===========================================
# Scraping Configuration
# ===========================================
# Price change threshold (percentage)
PRICE_CHANGE_THRESHOLD=5.0

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout (seconds)
REQUEST_TIMEOUT=30
